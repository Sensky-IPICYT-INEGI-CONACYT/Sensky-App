<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="AppThemeSplash" parent="AppTheme.Base">
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:background">@color/white</item>

    </style>

    <style name="AppThemeEvidence" parent="AppTheme.Base">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:background">@color/white</item>
    </style>
    

    

    <style name="AppThemeChallenge" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="tagStatic">
        <item name="android:layout_margin">@dimen/tag_margin</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/quicksand_regular</item>
    </style>


    <style name="SurveyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="PhotoTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

   <style name="AppThemePermissions" parent="AppTheme.Base">
        <item name="colorPrimary">@color/white_tralucent</item>
        <item name="colorPrimaryDark">@color/white_tralucent</item>
    </style>
  <style name="AppThemeNewAvatar" parent="AppTheme.Base">
        <item name="colorPrimary">@color/blue_light</item>
        <item name="colorPrimaryDark">@color/blue_light</item>
    </style>

</resources>

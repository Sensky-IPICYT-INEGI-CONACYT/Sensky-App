<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        android:id="@+id/itemTagCv"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardCornerRadius="7dp"
        app:cardElevation="0dp"
        android:backgroundTint="@color/white"
        android:layout_margin="5dp" >
    <RelativeLayout
            android:id="@+id/itemTagBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <androidx.cardview.widget.CardView
                    android:layout_width="34dp"
                    android:layout_height="34dp"
               android:id="@+id/cvImage"
                android:layout_centerVertical="true"
               card_view:cardCornerRadius="0dp"
               app:cardElevation="0dp"
               android:layout_alignParentStart="true"
               app:cardBackgroundColor="@color/transparent"

               app:backgroundTint="@color/transparent"
            >
                <RelativeLayout
                        android:background="@drawable/marco_redondo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                android:padding="9dp">
                    <androidx.cardview.widget.CardView
                            android:id="@+id/circle_selected"
                            android:layout_width="match_parent" android:layout_height="match_parent"
                       android:layout_centerVertical="true"
                       card_view:cardCornerRadius="17dp"
                       app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/colorPrimary"
                        android:background="@color/transparent"
                    />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                    android:id="@+id/itemTagText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:maxWidth="130dp"
                    android:minWidth="50dp"
                    android:minHeight="50dp"
                    android:layout_toEndOf="@+id/cvImage"
            android:text="Etiqueta"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textSize="16sp"
                    android:fontFamily="@font/quicksand_bold"
            android:textColor="@color/colorPrimary"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
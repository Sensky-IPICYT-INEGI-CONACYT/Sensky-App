<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:id="@+id/multiAnswerQuestion"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:visibility="gone"
        android:layout_below="@+id/idTitleSurvey"
        android:layout_alignParentBottom="true"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        tools:context=".ui.evidences.SurveyFragment"
        tools:showIn="@layout/activity_survey"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMultiAnswer"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btnNextQuestionOption"
            android:layout_margin="10dp">
    </androidx.recyclerview.widget.RecyclerView>

    <androidx.cardview.widget.CardView
            android:id="@+id/btnNextQuestionOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="20dp"
            card_view:cardBackgroundColor="@color/colorPrimary"
            card_view:cardCornerRadius="20dp">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="@font/quicksand_bold"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="15dp"
                    android:text="Siguiente"
                    android:textSize="14sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="@color/white"/>
            <ImageView
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_right_2"
                    android:scaleType="center"

                    android:contentDescription="TODO"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
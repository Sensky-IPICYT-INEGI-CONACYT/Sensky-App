<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        android:id="@+id/itemTagCv"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardCornerRadius="7dp"
        app:cardElevation="0dp"
        app:backgroundTint="@color/white"
        android:layout_margin="5dp" >
    <RelativeLayout
            android:id="@+id/itemTagBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

        <androidx.cardview.widget.CardView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:id="@+id/cvImage"
                android:layout_centerVertical="true"
                card_view:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                android:layout_marginEnd="10dp"
                android:background="@color/transparent"
                android:layout_alignParentStart="true"
                app:cardBackgroundColor="@color/white"
                app:backgroundTint="@color/transparent"
        >
            <RelativeLayout
                    android:background="@drawable/marco_cuadrado"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="0dp">
                <ImageView
                        android:id="@+id/imgAnswerSelected"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_done"
                        android:background="@color/transparent"
                        android:contentDescription="TODO"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
            <TextView
                    android:id="@+id/itemTagText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/cvImage"
                    android:gravity="center"
                    android:maxWidth="130dp"
                    android:minWidth="50dp"
                    android:minHeight="50dp"
            android:text="Porque miras a lo lejos y se ve una nata gris de himo"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textSize="16sp"
                    android:fontFamily="@font/quicksand_bold"
            android:textColor="@color/colorPrimary"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:visibility="gone"
        android:id="@+id/rlyEndSurvey"
        tools:context=".ui.evidences.SurveyFragment"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/blue"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">




    <TextView
            android:id="@+id/lblNivelValue"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:layout_above="@id/lblEncuesta"
            android:text="Felicidades! terminaste la"
            android:fontFamily="@font/quicksand_bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/blue_dark"
    />

    <TextView

            android:id="@+id/lblEncuesta"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="60dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Encuesta"
            android:fontFamily="@font/quicksand_bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3"
            android:textColor="@color/white"
    />

    <androidx.cardview.widget.CardView
            android:id="@+id/cvEndSurvey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblEncuesta"
            android:layout_centerHorizontal="true"
            android:layout_margin="30dp"
            card_view:cardBackgroundColor="@color/colorPrimary"
            card_view:cardCornerRadius="20dp">
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="@font/quicksand_bold"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:text="Aceptar"
                    android:textSize="18sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="@color/white"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>
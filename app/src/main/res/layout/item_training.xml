<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    card_view:cardBackgroundColor="@color/white"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginBottom="5dp"
    card_view:cardCornerRadius="0dp"
    app:cardElevation="0dp">

    <RelativeLayout
            android:id="@+id/layout_challenge_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <View
                android:id="@+id/line"
                android:layout_width="8dp"
                android:layout_height="100dp"
                android:background="@color/blue"
                android:layout_alignParentStart="true"/>
                <TextView
                        android:id="@+id/training_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="10dp"
                        android:textAlignment="viewStart"
                        android:layout_below="@id/training_date"
                        android:layout_toEndOf="@id/line"
                        android:text="CapacitaciÃ³n"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                        android:textColor="@color/colorPrimary"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:fontFamily="@font/quicksand_bold"
                        />

                <TextView
                        android:id="@+id/training_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:ellipsize="end"
                        android:gravity="start"
                        android:textAlignment="textStart"
                        android:maxLines="1"
                        android:text="2020/06/28"
                        android:fontFamily="@font/quicksand_regular"
                        android:textColor="@color/grey"
                        android:textSize="12sp"
                        android:shadowRadius="1"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        tools:ignore="RtlCompat,SmallSp"/>
                <TextView
                        android:id="@+id/training_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="leonardoalvriv@gmail.com"
                        android:layout_below="@id/training_title"
                        android:layout_toEndOf="@id/line"
                        android:paddingVertical="10dp"
                        android:layout_marginStart="20dp"
                        android:gravity="start"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                        android:textColor="@color/greyDark"
                        android:shadowRadius="2"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/quicksand_regular"
                />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>

    </style>

  <!--   <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
            <!-- Customize your theme here. -->
            <item name="colorPrimary">@color/blue</item>
            <item name="colorPrimaryDark">@color/blue</item>
            <item name="colorAccent">@color/blue</item>
        </style>




    <style name="AppThemeSplash" parent="AppTheme.Base">
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="LoginButtonOptions" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/white</item>
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">


    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>


    <style name="AppThemeEvidence" parent="AppTheme.Base">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:background">@color/white</item>
    </style>


    <style name="AppThemeLogin" parent="AppTheme.Base">
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppThemeChallenge" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

 

    <style name="ProgressBarIcon">
        <item name="colorAccent">@color/grey</item>
    </style>

    <style name="tagStatic">
        <item name="android:layout_margin">@dimen/tag_margin</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>

    </style>


    <style name="SurveyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="PhotoTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="WelcomeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>
    <style name="LoginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>


     <style name="AppThemeNewAvatar" parent="AppTheme.Base">
            <item name="colorPrimary">@color/blue_light</item>
            <item name="colorPrimaryDark">@color/blue_light</item>
        </style>
</resources>
